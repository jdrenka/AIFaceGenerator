<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Grab Avatar</title>
    <link rel="stylesheet" href="/styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            background-color: rgb(11, 16, 18);
        }
    </style>
</head>
<body>
    
    <div class = 'panelgroup'>

        <div class = 'sidebar'>
            <div class = 'userinfo'>
                <h2> <%= username %></h2>
                <form action="/logout" method="post">
                        <button class = 'logout_button'>Log out</button>
                </form>
            </div>

            <div class = 'navbar_selection'>
                <h2>Categories</h2>
            </div>

            <div class = 'navbar_selection'>
                <h2>Manage Images</h2>
            </div>
            
            <div class = 'navbar_selection'>
                <h2>oi</h2>
            </div>
            
            <div class = 'navbar_selection'>
                <h2>oi</h2>
            </div>
            
            
        </div>

        <div class="main_panel">
            <h1 class = 'white_header'>Avatar Generator</h1>
            <button class = 'button' id="fetchImage">Fetch Avatar</button>
            <img id="avatarImage" src="" alt="Avatar will be displayed here" style="display: none;"/>
        </div>
        
    </div>

    

    <script>
        document.getElementById('fetchImage').addEventListener('click', function() {
            fetch('http://192.168.1.97:5000/generate-image', {
            })
                .then(response => response.blob())
                .then(blob => {
                    console.log(blob);
                    const imageUrl = URL.createObjectURL(blob);
                    document.getElementById('avatarImage').src = imageUrl;
                    document.getElementById('avatarImage').style.display = 'block';
                })
                .catch(error => console.error('Error fetching image:', error));
        });
    </script>
</body>
</html>